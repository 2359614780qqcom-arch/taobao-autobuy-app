<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/floating_window_background"
    android:padding="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="抢购控制"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态: 未启动"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_start_auto_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始抢购"
        android:textSize="12sp"
        android:background="@drawable/floating_button_background"
        android:textColor="#ffffff"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_stop_auto_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止抢购"
        android:textSize="12sp"
        android:background="@drawable/floating_button_background_stop"
        android:textColor="#ffffff"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭"
        android:textSize="12sp"
        android:background="@drawable/floating_button_background_close"
        android:textColor="#ffffff" />

</LinearLayout>